<h4>Posts</h4>
<%= link_to 'New post', new_post_path, :class=>'btn btn-large btn-primary' %>
<table class="table" >
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post_path(post),method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<p class="alert alert-info">To create,delete and update posts and comments, use username=chinglen  and password=meitei</p>
